@model IEnumerable<Store>

<div class="container mt-4">
    <h3 class="text-center mb-4">Stores List</h3>

    <table class="table table-striped table-bordered text-center" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="/Admin/Store/Edit/@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Admin/Store/Delete/@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary mb-3" href="/Admin/Store/Create">Create Store</a>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Button -->
            <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.Page - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.Page + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
